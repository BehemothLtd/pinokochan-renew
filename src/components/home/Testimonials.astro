---
/**
 * Testimonials Section
 * Customer reviews with photos and ratings
 */

const testimonials = [
  {
    name: 'Nguyễn Thị Mai',
    avatar: 'https://placehold.co/100x100/E8A0BF/ffffff?text=M',
    role: 'Khách hàng thân thiết',
    content: 'Mình đã mua hàng ở Pinokochan được 2 năm rồi. Sản phẩm chính hãng, giá cả hợp lý, tư vấn nhiệt tình. Rất recommend cho mọi người!',
    rating: 5,
    product: 'Serum Vitamin C',
  },
  {
    name: 'Trần Văn Hùng',
    avatar: 'https://placehold.co/100x100/78716c/ffffff?text=H',
    role: 'Doanh nhân',
    content: 'Chất lượng sản phẩm Nhật Bản thì khỏi nói rồi. Pinokochan giao hàng nhanh, đóng gói cẩn thận. Mình sẽ tiếp tục ủng hộ.',
    rating: 5,
    product: 'Nồi cơm Zojirushi',
  },
  {
    name: 'Lê Thị Hương',
    avatar: 'https://placehold.co/100x100/DB7093/ffffff?text=H',
    role: 'Beauty Blogger',
    content: 'Là một beauty blogger, mình rất kỹ tính về mỹ phẩm. Pinokochan luôn cung cấp hàng auth, có tem chống giả đầy đủ. 10 điểm!',
    rating: 5,
    product: 'Son Shiseido',
  },
];
---

<section class="ma-section bg-gradient-to-b from-white to-stone-50 relative overflow-hidden">
  <!-- Decorative Japanese character -->
  <div class="absolute top-10 left-10 text-[200px] leading-none jp-accent select-none pointer-events-none hidden lg:block">
    信
  </div>
  <div class="absolute bottom-10 right-10 text-[150px] leading-none jp-accent select-none pointer-events-none hidden lg:block">
    頼
  </div>

  <div class="japandi-container relative">
    <!-- Section header -->
    <div class="text-center mb-14 reveal">
      <span class="inline-block px-4 py-1.5 bg-pink-50 text-pink-600 text-sm font-medium tracking-wider rounded-full mb-4">
        Đánh giá từ khách hàng
      </span>
      <h2 class="text-3xl lg:text-4xl font-medium text-stone-800 mb-4">
        Khách hàng <span class="gradient-text">nói gì</span> về chúng tôi
      </h2>
      <p class="text-stone-500 max-w-lg mx-auto text-lg">
        Hơn 1000+ khách hàng đã tin tưởng và hài lòng với dịch vụ của Pinokochan
      </p>
    </div>

    <!-- Testimonials grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8 stagger-reveal">
      {testimonials.map((testimonial) => (
        <div class="testimonial-card relative">
          <!-- Quote mark -->
          <div class="quote-mark absolute -top-2 -left-2">"</div>

          <!-- Content -->
          <div class="relative pt-6">
            <!-- Rating -->
            <div class="flex gap-1 mb-4">
              {Array.from({ length: testimonial.rating }).map(() => (
                <svg class="rating-star" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>

            <!-- Review text -->
            <p class="text-stone-600 leading-relaxed mb-6">
              {testimonial.content}
            </p>

            <!-- Product purchased -->
            <div class="text-sm text-stone-400 mb-6">
              Đã mua: <span class="text-pink-500">{testimonial.product}</span>
            </div>

            <!-- Author -->
            <div class="flex items-center gap-4 pt-6 border-t border-stone-100">
              <img
                src={testimonial.avatar}
                alt={testimonial.name}
                class="w-12 h-12 rounded-full object-cover"
                loading="lazy"
              />
              <div>
                <p class="font-medium text-stone-800">{testimonial.name}</p>
                <p class="text-sm text-stone-500">{testimonial.role}</p>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Trust indicators -->
    <div class="flex flex-wrap items-center justify-center gap-8 lg:gap-12 mt-14 pt-10 border-t border-stone-200 reveal">
      <div class="text-center">
        <p class="text-3xl lg:text-4xl font-semibold gradient-text" data-counter="1000">0</p>
        <p class="text-stone-500 text-sm mt-1">Khách hàng</p>
      </div>
      <div class="text-center">
        <p class="text-3xl lg:text-4xl font-semibold gradient-text" data-counter="500">0</p>
        <p class="text-stone-500 text-sm mt-1">Sản phẩm</p>
      </div>
      <div class="text-center">
        <p class="text-3xl lg:text-4xl font-semibold gradient-text" data-counter="5">0</p>
        <p class="text-stone-500 text-sm mt-1">Năm kinh nghiệm</p>
      </div>
      <div class="text-center">
        <p class="text-3xl lg:text-4xl font-semibold gradient-text">4.9<span class="text-xl">/5</span></p>
        <p class="text-stone-500 text-sm mt-1">Đánh giá trung bình</p>
      </div>
    </div>
  </div>
</section>
