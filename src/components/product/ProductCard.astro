---
import Badge from '@/components/ui/Badge.astro';
import Price from '@/components/ui/Price.astro';
import type { ProductData } from '@/types';

interface Props {
  product: ProductData;
  class?: string;
}

const { product, class: className = '' } = Astro.props;
---

<article class={`group relative bg-white rounded-2xl overflow-hidden hover-lift ${className}`}>
  <a href={`/products/${product.slug}`} class="block">
    <!-- Image Container -->
    <div class="relative aspect-[4/5] overflow-hidden bg-gradient-to-br from-stone-50 to-stone-100">
      <img
        src={product.images[0]}
        alt={product.name}
        loading="lazy"
        class="w-full h-full object-cover transition-all duration-700 group-hover:scale-110"
      />

      <!-- Overlay gradient on hover -->
      <div class="absolute inset-0 bg-gradient-to-t from-stone-900/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

      <!-- Badges -->
      <div class="absolute top-3 left-3 flex flex-col gap-2">
        {product.featured && (
          <Badge variant="new">Nổi bật</Badge>
        )}
        {product.originalPrice && (
          <Badge variant="sale">
            -{Math.round((1 - product.price / product.originalPrice) * 100)}%
          </Badge>
        )}
      </div>

      <!-- Quick view button on hover -->
      <div class="absolute bottom-4 left-1/2 -translate-x-1/2 opacity-0 group-hover:opacity-100 translate-y-4 group-hover:translate-y-0 transition-all duration-500">
        <span class="inline-flex items-center gap-2 px-4 py-2 bg-white/95 backdrop-blur-sm text-stone-800 text-sm font-medium rounded-full shadow-lg">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
          </svg>
          Xem chi tiết
        </span>
      </div>

      <!-- Pink accent line -->
      <div class="absolute bottom-0 left-0 w-0 h-1 bg-gradient-to-r from-pink-400 to-pink-600 group-hover:w-full transition-all duration-500"></div>
    </div>

    <!-- Content -->
    <div class="p-4 space-y-3">
      <!-- Name -->
      <h3 class="font-medium text-stone-800 line-clamp-2 group-hover:text-pink-600 transition-colors duration-300 text-[15px] leading-snug">
        {product.name}
      </h3>

      <!-- Price and action row -->
      <div class="flex items-center justify-between">
        <Price amount={product.price} originalAmount={product.originalPrice} />

        <!-- Heart icon -->
        <button
          type="button"
          class="w-8 h-8 rounded-full bg-stone-100 flex items-center justify-center text-stone-400 hover:bg-pink-100 hover:text-pink-500 transition-colors duration-300"
          aria-label="Thêm vào yêu thích"
          onclick="event.preventDefault(); event.stopPropagation();"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
          </svg>
        </button>
      </div>
    </div>
  </a>
</article>
