---
/**
 * Contact Page
 * Contact information and form for customer inquiries
 */
import BaseLayout from '@/layouts/BaseLayout.astro';
import Button from '@/components/ui/Button.astro';
import Divider from '@/components/ui/Divider.astro';
---

<BaseLayout
  title="Liên hệ"
  description="Liên hệ với Pinokochan - Hàng Nhật chuẩn, giá tốt"
>
  <div class="japandi-container ma-section">
    <div class="max-w-4xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-3xl lg:text-4xl font-medium text-stone-800 mb-4">
          Liên hệ
        </h1>
        <p class="text-stone-500 max-w-lg mx-auto">
          Hãy liên hệ với chúng tôi nếu bạn có bất kỳ câu hỏi nào về sản phẩm
          hoặc muốn đặt hàng.
        </p>
      </div>

      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Contact Info -->
        <div class="space-y-8">
          <div>
            <h2 class="text-xl font-medium text-stone-700 mb-6 pink-underline">
              Thông tin liên hệ
            </h2>

            <div class="space-y-4">
              <!-- Hotline -->
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 rounded-full bg-[#E8A0BF]/20 flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-[#E8A0BF]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <div>
                  <p class="font-medium text-stone-700">Hotline</p>
                  <a href="tel:+84xxxxxxxxx" class="text-stone-500 hover:text-[#E8A0BF]">
                    +84 xxx xxx xxx
                  </a>
                </div>
              </div>

              <!-- Email -->
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 rounded-full bg-[#E8A0BF]/20 flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-[#E8A0BF]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <p class="font-medium text-stone-700">Email</p>
                  <a href="mailto:contact@pinokochan.vn" class="text-stone-500 hover:text-[#E8A0BF]">
                    contact@pinokochan.vn
                  </a>
                </div>
              </div>

              <!-- Zalo -->
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 rounded-full bg-[#E8A0BF]/20 flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-[#E8A0BF]" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm5.894 14.843c-.204.578-.786.934-1.457.934H9.563c-.672 0-1.253-.356-1.457-.934-.204-.578.051-1.23.637-1.634l4.257-2.936-4.257-2.936c-.586-.404-.841-1.056-.637-1.634.204-.578.785-.934 1.457-.934h6.874c.672 0 1.253.356 1.457.934.204.578-.051 1.23-.637 1.634L13.5 10.273l3.757 2.936c.586.404.841 1.056.637 1.634z"/>
                  </svg>
                </div>
                <div>
                  <p class="font-medium text-stone-700">Zalo</p>
                  <a href="https://zalo.me/pinokochan" target="_blank" class="text-stone-500 hover:text-[#E8A0BF]">
                    Pinokochan
                  </a>
                </div>
              </div>

              <!-- Facebook -->
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 rounded-full bg-[#E8A0BF]/20 flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-[#E8A0BF]" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                  </svg>
                </div>
                <div>
                  <p class="font-medium text-stone-700">Facebook</p>
                  <a href="https://facebook.com/pinokochan" target="_blank" class="text-stone-500 hover:text-[#E8A0BF]">
                    facebook.com/pinokochan
                  </a>
                </div>
              </div>
            </div>
          </div>

          <Divider variant="line" />

          <!-- Business Hours -->
          <div>
            <h3 class="font-medium text-stone-700 mb-3">Giờ làm việc</h3>
            <p class="text-stone-500 text-sm">
              Thứ 2 - Thứ 6: 9:00 - 18:00<br />
              Thứ 7: 9:00 - 12:00<br />
              Chủ nhật: Nghỉ
            </p>
          </div>
        </div>

        <!-- Contact Form -->
        <div>
          <h2 class="text-xl font-medium text-stone-700 mb-6 pink-underline">
            Gửi tin nhắn
          </h2>

          <form id="contact-form" class="space-y-4">
            <div>
              <label for="name" class="block text-sm font-medium text-stone-600 mb-1">
                Họ và tên <span class="text-[#E8A0BF]">*</span>
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 border border-stone-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#E8A0BF] focus:border-transparent transition-shadow"
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-stone-600 mb-1">
                Email <span class="text-[#E8A0BF]">*</span>
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border border-stone-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#E8A0BF] focus:border-transparent transition-shadow"
              />
            </div>

            <div>
              <label for="phone" class="block text-sm font-medium text-stone-600 mb-1">
                Số điện thoại
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-3 border border-stone-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#E8A0BF] focus:border-transparent transition-shadow"
              />
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-stone-600 mb-1">
                Nội dung <span class="text-[#E8A0BF]">*</span>
              </label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="w-full px-4 py-3 border border-stone-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#E8A0BF] focus:border-transparent transition-shadow resize-none"
              ></textarea>
            </div>

            <Button variant="primary" size="lg" class="w-full">
              Gửi tin nhắn
            </Button>
          </form>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<script>
  // Handle contact form submission (client-side only)
  const form = document.getElementById('contact-form') as HTMLFormElement;

  form?.addEventListener('submit', (e) => {
    e.preventDefault();

    // Get form data
    const formData = new FormData(form);
    const data = Object.fromEntries(formData);

    console.log('Contact form submitted:', data);

    // Show success message (in production, this would send to backend)
    alert('Cảm ơn bạn đã liên hệ! Chúng tôi sẽ phản hồi sớm nhất có thể.');

    // Reset form
    form.reset();
  });
</script>
